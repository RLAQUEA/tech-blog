<div class="card">
  <h2 class="card-header">Signup</h2>
</div>
<div id="signup">
  <form class="signup-form card-body">
    <label for="username-signup">Username:</label>
    <input class="form-input" type="text" id="username-signup" />
</div>
<div class="form-group">
  <label for="password-signup">Password:</label>
  <input class="form-input" type="password" id="password-signup" />
</div>
<div class="form-group">
  <button class="btn btn-primary signup-form" type="submit" id="signup-btn">Submit</button>
  <br>
  <br>
  <a href="/login">Already have an account? Login instead</a>
  </form>
</div>
</div>
<script src="/js/signup.js"></script>